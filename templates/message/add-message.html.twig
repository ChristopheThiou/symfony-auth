{% extends 'base.html.twig' %}

{% block title %}Message list{% endblock %}

{% block body %}
<div class="card mx-auto w-75 mt-5">
    <div class="card-body">
        <h1 class="card-title">Message Form</h1>
       
        <form method="post">
            <label for="content">Content :</label>
            <textarea name="content" id="content" cols="30" rows="10" required class="form-control"></textarea>
        
            <button class="btn btn-primary">Add Message</button>
        </form>
    </div>
</div>
{% endblock %}
