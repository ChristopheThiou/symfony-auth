{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="card mx-auto w-75 mt-5">
    <div class="card-body">
        <h1 class="card-title">Login Form</h1>
        {% if error %}
        <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post">
            <label for="email">Email</label>
            <input type="email" name="_username" id="email" class="form-control" required value="{{lastUsername}}">
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" required>

            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
{% endblock %}